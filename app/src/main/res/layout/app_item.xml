<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/list_padding_vertical"
    android:paddingBottom="@dimen/list_padding_vertical"
    android:background="@drawable/selector_row"
    android:clickable="true">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/list_avatar_size"
        android:layout_height="@dimen/list_avatar_size"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/list_padding_horizontal"
        android:layout_marginEnd="@dimen/list_padding_horizontal"
        android:layout_marginLeft="@dimen/list_padding_horizontal"
        android:layout_marginRight="@dimen/list_padding_horizontal"
        android:contentDescription="@null" />

    <TextView
        android:id="@android:id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <ImageView
        android:id="@+id/more_info"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingStart="@dimen/list_padding_horizontal"
        android:paddingEnd="@dimen/list_padding_horizontal"
        android:paddingLeft="@dimen/list_padding_horizontal"
        android:paddingRight="@dimen/list_padding_horizontal"

        android:layout_gravity="center_vertical"
        android:contentDescription="More info"
        android:src="@drawable/ic_info_gray"

        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        />

</LinearLayout>
